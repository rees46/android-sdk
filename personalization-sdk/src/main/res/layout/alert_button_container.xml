<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/large_margin">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginEnd="6dp"
        android:layout_weight="1"
        app:cardCornerRadius="8dp">

        <com.personalization.inAppNotification.view.component.button.AlertButton
            android:id="@+id/buttonDecline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:buttonColor="@color/colorGray"
            app:buttonText="@string/alert_dialog_button_decline_title"
            app:textColor="@color/white"
            app:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="6dp"
        android:layout_weight="1"
        app:cardCornerRadius="8dp">

        <com.personalization.inAppNotification.view.component.button.AlertButton
            android:id="@+id/buttonAccept"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            app:buttonColor="@color/colorPrimary"
            app:buttonText="@string/alert_dialog_button_accept_title"
            app:textColor="@color/white"
            app:textSize="18sp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>