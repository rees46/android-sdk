<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/large_margin"
    android:maxWidth="300dp"
    android:minHeight="150dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <com.personalization.inAppNotification.view.component.image.AlertImageView
                android:id="@+id/backgroundImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="top"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/image_sample" />

            <com.personalization.inAppNotification.view.component.button.CloseImageButton
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_margin="@dimen/medium_margin"
                app:alpha="0.5"
                app:backgroundColor="@color/gray_scale"
                app:src="@drawable/ic_close" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:orientation="vertical"
            android:paddingTop="@dimen/large_margin"
            android:translationY="-16dp">

            <include
                android:id="@+id/textContainer"
                layout="@layout/alert_text_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_marginEnd="18dp" />

            <include
                android:id="@+id/buttonContainer"
                layout="@layout/alert_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>