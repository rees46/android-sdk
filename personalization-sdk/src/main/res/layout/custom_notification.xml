<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/notificationBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/notification_roudned_background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginHorizontal="@dimen/large_margin"
                android:src="@drawable/app_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/large_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    tools:text="Body" />

            </LinearLayout>

            <ImageView
                android:id="@+id/small_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/large_margin"
                android:visibility="gone"
                tools:src="@drawable/common_google_signin_btn_icon_dark_focused"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/expand_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/large_margin"
                android:src="@drawable/ic_arrow_open" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:layout_marginVertical="@dimen/medium_margin"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/large_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/notification_roudned_background"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:src="@drawable/image_sample"
                tools:visibility="visible" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/medium_margin"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>